{% extends "base.html.twig" %}

{% block stylesheets %}
    <link href="css/homeNavStyle.css" rel="stylesheet" />
{% endblock %}

{% block body %}
    <!-- Masthead-->
    <header class="masthead">
        <div class="container h-100">
            {% for message in app.flashes('login', 'registration') %}
                <div class="text-primary text-center">
                    {{ message }}
                </div>
            {% endfor %}
            <div class="row h-100 align-items-center justify-content-center text-center">
                <div class="col-lg-10 align-self-end">
                    <div class="box">
                        <h1 class="text-uppercase text-white font-weight-bold">Développeur web</h1>
                    </div>
                    <hr class="divider my-4 hr-home" />
                </div>
                <div class="col-lg-8 align-self-baseline">
                    <p class="text-white-75 font-weight-light mb-5">Je suis Nabyl Badid, développeur web back-end.</p>
                    <a class="btn btn-primary btn-xl js-scroll-trigger" href="{{ path('display_page', {'page': 'about'}) }}">En savoir plus</a>
                </div>
            </div>
        </div>
    </header>
{% endblock %}