{% extends "base.html.twig" %}

{% block body %}
    <section class="page-section">
        <div class="container">
            <h1 class="regCon"> Connexion </h1>
			<hr class="divider my-4">
            
            <form action="{{ path('security_login') }}" method="post">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Nom d'utilisateur" required="required" name="_username">
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" placeholder="Mot de passe" required="required" name="_password">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn formButton">Connexion</button>
                    </div>
            </form>
        </div>
    </section>
{% endblock %}